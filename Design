#Написанно на языке программирования R  с использованием пакета Shiny
ui <- pageWithSidebar(
  headerPanel("Считаем основные характеристики дата-фрейма"),
  sidebarPanel(
    fileInput(
      "file1",
      "Выберите CSV файл:",
      accept = c('text/csv', 'text/comma-separated-values,text/plain', '.csv')
    ),
    tags$hr(),
    checkboxInput('header', 'Header', TRUE),
    radioButtons(
      'sep',
      'Separator',
      c(
        Comma = ',',
        Semicolon = ';',
        Tab = '\t'
      ),
      'Comma'
    ),
    radioButtons(
      'quote',
      'Quote',
      c(
        None = '',
        'Double Quote' = '"',
        'Single Quote' = "'"
      ),
      'Double Quote'
    )),
  mainPanel(
    verbatimTextOutput("Chtoposchit"),
    verbatimTextOutput('contents'),
    tableOutput("tablica")
  )
)
